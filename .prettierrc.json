{
    "trailingComma": "none",
    "printWidth": 180,
    "tabWidth": 4,
    "semi": false,
    "singleQuote": false,
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "overrides": [
        {
            "files": ["*.html", "*.htm"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.js", "*.jsx"],
            "options": {
                "singleQuote": true,
                "semi": true
            }
        }
    ]
}
